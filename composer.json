{
    "name": "flute-cms/cms",
    "description": "A flexible and modular CMS tailored for managing game servers.",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "cms",
        "flute",
        "flute cms",
        "flute-cms",
        "flute engine",
        "csgo",
        "css",
        "minecraft",
        "cs2",
        "counter strike",
        "cs1.6"
    ],
    "authors": [
        {
            "name": "Flames",
            "email": "xenozf@gmail.com",
            "role": "Developer and Creator"
        }
    ],
    "require": {
        "php": "^8.2",
        "clickfwd/yoyo": "^0.10.1",
        "composer/composer": "^2.7",
        "cycle/active-record": "^0.8.0",
        "cycle/annotated": "^4.1",
        "cycle/entity-behavior": "^1.3",
        "cycle/migrations": "^4.2",
        "cycle/orm": "^2.8.0",
        "cycle/schema-builder": "^2.9",
        "cycle/schema-migrations-generator": "^2.2",
        "doctrine/collections": "^2.2",
        "erusev/parsedown": "^1.7",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/promises": "^2.0",
        "hassankhan/config": "^3.1",
        "hybridauth/hybridauth": "^3.11",
        "illuminate/view": "^9.52",
        "jenssegers/agent": "^2.6",
        "jenssegers/blade": "^2.0",
        "league/glide": "^2.3",
        "league/omnipay": "^3.2",
        "madesimple/php-arrays": "^3.0",
        "matthiasmullie/minify": "^1.3",
        "monolog/monolog": "^2.9",
        "nette/schema": "^1.3",
        "padaliyajay/php-autoprefixer": "^1.4",
        "peppeocchi/php-cron-scheduler": "^4.0",
        "perftools/php-profiler": "^1.2",
        "php-di/php-di": "^7.0",
        "php-http/guzzle7-adapter": "^1.0",
        "predis/predis": "^2.3",
        "psr/log": "^1.1 || ^2.0 || ^3.0",
        "ramsey/uuid": "^4.7",
        "rosell-dk/webp-convert": "^2.9",
        "sabberworm/php-css-parser": "^8.9",
        "scssphp/scssphp": "^1.13",
        "symfony/asset": "^6.4",
        "symfony/cache": "^6.4",
        "symfony/config": "^7.0",
        "symfony/event-dispatcher": "^6.4",
        "symfony/filesystem": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/http-kernel": "^6.4",
        "symfony/mailer": "^6.4",
        "symfony/mime": "^6.4",
        "symfony/process": "^6.4",
        "symfony/rate-limiter": "^6.4",
        "symfony/routing": "^6.4",
        "symfony/scheduler": "^6.4",
        "symfony/security-csrf": "^6.4",
        "symfony/stopwatch": "^6.4",
        "symfony/string": "^6.4",
        "symfony/translation": "^6.4",
        "tracy/tracy": "^2.10",
        "wikimedia/composer-merge-plugin": "^2.1",
        "xpaw/php-source-query-class": "^4.0",
        "xpaw/steamid": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.85",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Flute\\": "app/",
            "Flute\\Admin\\": "app/Core/Modules/Admin/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flute\\Tests\\": "tests/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "app/Modules/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": true,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-replace": true,
            "merge-scripts": false
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpstan analyse --memory-limit=2G",
            "@php vendor/bin/php-cs-fixer check --dry-run"
        ],
        "test-fix": [
            "@php vendor/bin/php-cs-fixer fix"
        ],
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "format": "vendor/bin/php-cs-fixer fix",
        "format-check": "vendor/bin/php-cs-fixer check --dry-run",
        "migrate": "php flute migrate",
        "migrate-status": "php flute migrate:status",
        "optimize": [
            "php flute cache:clear"
        ],
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/friendsofphp/php-cs-fixer/php-cs-fixer')) { copy('vendor/friendsofphp/php-cs-fixer/php-cs-fixer', 'php-cs-fixer'); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/friendsofphp/php-cs-fixer/php-cs-fixer')) { copy('vendor/friendsofphp/php-cs-fixer/php-cs-fixer', 'php-cs-fixer'); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
